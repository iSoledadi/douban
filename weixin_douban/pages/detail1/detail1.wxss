/* pages/detail1/detail1.wxss */
.detail-container{
  width:100%;
  box-sizing: border-box;
  padding:30rpx;
  background:rgb(245,245,245);
}
.detail-top{
  width:100%;
  height:350rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.detail-poster{
  width:200rpx;
  height:260rpx;
}
.detail-top-text{
  width:65%;
  height:100%;
  padding:45rpx 0;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 11px;
  color: #777;
}
.detail-top-title{
  font-size: 40rpx;
  color:#000;
  font-weight: bold;
}
.detail-top-smallTitle{
  font-size: 30rpx;
}
.detail-top-button{
  display: flex;
  justify-content: space-between;
}
.top-btn{
  width:45%;
  height:70rpx;
  font-size: 28rpx;
  font-weight: bold;
  background:#fff;
  padding:0;
  line-height: 70rpx;
  box-shadow: 0 1px 0.5px 0.5px #ddd;
}
.top-btn::after{
  border:none;
}
.top-btn image{
  width:26rpx;
  height:26rpx;
  vertical-align: center;
}
.detail-score{
  width:100%;
  /* height:100rpx; */
  background: #fff;
  border-radius: 10rpx;
  box-sizing: border-box;
  padding: 10rpx 20rpx;
  text-align: center;
  background: #fff;
}
.score-title{
  width: 100%;
  height:20rpx;
  display: flex;
  justify-content: space-between;
  font-size: 22rpx;
  font-weight: bold;
  align-items: center;
}
#detailJiantou{
  width:12rpx;
  height:12rpx;
}
.score-container{
  width:65%;
  height:205rpx;
  display: flex;
  justify-content: space-between;
  font-size: 22rpx;
  margin:0 auto;
  padding: 30rpx 0;
  box-sizing: border-box;
}
.score-left{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
}
.score-num{
  font-size: 56rpx;
  font-weight: bold;
}
.star-father{
  /* width:112rpx; */
  position: relative;
  height:32rpx;
}
.text-star{
  color:#e2e2e2;
  position: relative;
  height:32rpx;
  font-size: 28rpx;
}
.text-star2{
  color:#f19e38;
  position: absolute;
  width:75%;
  overflow: hidden;
  top:0;
  left:0;
  height:32rpx;
  font-size: 28rpx;
}
.score-right{
  display: flex;
  flex-direction: column;
  justify-content: start;
  text-align: right;
}
.score-pic{
  display: flex;
  justify-content: space-between;
  padding-top: 10rpx;
}
.score-stars{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  text-align: right;
}
.score-stars view{
  height:22rpx;
  font-size: 16rpx;
  color:#777;
}
.score-process{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  /* height:auto; */
  padding-top: 6rpx;
  height:106rpx;
  box-sizing: border-box;
  margin-bottom: 4rpx;
}
.process-gray{
  width:200rpx;
  height:12rpx;
  background: #eee;
  border-radius: 4rpx;
  margin-left: 6rpx;
  position: relative;
}
.process-orange1,.process-orange2,.process-orange3,.process-orange4,.process-orange5{
  position:absolute;
  width:27%;
  overflow: hidden;
  height:12rpx;
  background: #f19e38;
  border-radius: 4rpx;
  left:0;
  top:0;
}
.process-orange2{
  width:45.5%;
}
.process-orange3{
  width:23.8%;
}
.process-orange4{
  width:3.1%;
}
.process-orange5{
  width:0.6%;
}
.small-bottom-score{
  font-size: 20rpx;
  color:#aaa;
}
/* 简介 */
.detail-introduce{
  width:100%;
  margin-top: 50rpx;
}
.introduce-title{
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.introduce-container{
  font-size: 30rpx;
  overflow: hidden;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
}
.content-breif {
  -webkit-line-clamp: 4;  /* 显示几行 */
}
.introduce-back{
  font-size: 30rpx;
  color:#aaa;
  text-align: right;
}
/* 角色介绍 */
.detail-role{
  width:100%;
  margin-top: 50rpx;
}
.detail-title{
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.hengKuang{
  display:flex;
  justify-content: space-between;
  width:890rpx;
  /* padding:0 10px; */
}
.hengKuang image{
  width:150rpx;
  height:214rpx;
}
.index_poster{
  width:150rpx;
  display:flex;
  flex-direction: column;
  font-size: 20rpx;
  color: #777;
}
.poster-name{
  width:200rpx;
  color: black;
  font-size: 24rpx;
  margin-top: 12rpx;
}
.poster-job{
  width:200rpx;
  margin-top: 12rpx;
}
.detail-picture{
  width:100%;
  margin-top: 50rpx;
  overflow: hidden;
}
.pic-title{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 34rpx;
  font-weight: bold;
  padding-right: 2rpx;
  margin-bottom: 20rpx;
}
.pic-more{
  font-size: 24rpx;
  color: #777;
  display: flex;
  align-items: center;
}
.hengKuang2{
  display:flex;
  justify-content: space-between;
  width:2940rpx;
  height: 321rpx;
  /* padding:0 10px; */
}
.hengKuang2 image{
  /* min-width:150rpx; */
  height:321rpx;
  border-radius: 0;
}
.film_poster{
  /* width:150rpx; */
  display:flex;
  flex-direction: column;
  font-size: 20rpx;
  color: #777;
}
/* 短评 */
.short-comment{
  width:100%;
  margin-top: 50rpx;
  box-sizing: border-box;
  padding: 10rpx 30rpx;
  background: #fff;
  border-radius: 10rpx;
}
.short-title{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  font-size: 34rpx;
  font-weight: bold;
  margin: 20rpx 0;
}
.short-user{
  width:100%;
  display: flex;
  justify-content: start;
  align-items: center;
  margin-top: 30rpx;
}
.short-user image{
  border-radius: 50%;
  width:72rpx;
  height:72rpx;
  margin-right: 10rpx;
}
.short-uname{
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  font-weight: bold;
}
.short-star{
  display: flex;
  width:230rpx;
  justify-content: space-between;
  font-size: 24rpx;
  color: #aaa;
  position: relative;
}
.short-star-gray{
  position: relative;
  width:100rpx;
}
.short-star-orange{
  position: absolute;
  top: 0;
  left: 0;
  color: #f19e38;
  overflow: hidden;
  /* width:90%; */
}
.short-comment-container{
  font-size: 30rpx;
  margin-bottom: 16rpx;
}
.short-agree{
  display: flex;
  justify-content: start;
  color: #8a8a8a;
  font-size: 24rpx;
  align-items: center;
  box-sizing: border-box;
  padding-bottom: 16rpx;
  border-bottom: 1.6rpx solid #ccc;
}
.short-agree image{
  width:40rpx;
  height:40rpx;
  margin-right: 6rpx;
}
/* 推荐其他电影 */
.detail-other{
  width:100%;
  margin:50rpx 0;
}
.poster-title{
  width:150rpx;
  overflow: hidden;
  font-size: 24rpx;
  font-weight: bold;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
.poster-score{
  display: flex;
  justify-content: space-between;
  align-items: baseline;
}
.poster-score view{
  font-size: 23rpx;
}
/* 影评 */
.detail-long-comment{
  width:100%;
  margin:0 -30rpx;

}
.detail-long-comment .detail-title{
  padding:0 30rpx 10rpx 30rpx;
}
.long-comment-num{
  font-size: 24rpx;
  color: #777;
  margin-left: 4rpx;
  font-weight: normal;
}
.long-comment-container{
  width:100%;
  padding:30rpx;
  background: #fff;
  margin-bottom: 15rpx;
  /* box-sizing: border-box; */
}
.long-msg{
  display: flex;
  justify-content: start;
  font-size: 24rpx;
  color:#999;
  align-items: center;
}
.long-msg image{
  width:60rpx;
  height:60rpx;
  border-radius: 50%;
}
.long-user{
  margin:0 8rpx;
}
.long-title{
  font-size: 36rpx;
  font-weight: bold;
  margin: 10rpx 0 20rpx 0;
}
.long-content{
  width:100%;
  overflow: hidden;
  font-size: 30rpx;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  margin-bottom: 20rpx;
}
.long-bottom{
  display: flex;
  justify-content: start;
  font-size: 26rpx;
  color:#777;
}
.long-span{
  margin:0 8rpx;
}