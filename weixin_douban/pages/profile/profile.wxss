/* pages/profile/profile.wxss */
.profile{
  width:100%;
  /* height:1400rpx; */
  box-sizing: border-box;
  position: relative;
  /* background:#5cc76d; */
}
.profileBg{
  width: 750rpx;
  height:350rpx;
  border-radius: 0;
  position: absolute;
  top:0;
  left:0;
}
.profile_user{
  width:40%;
  height:350rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 0 auto;
}
/* .profile_user image{
  width:200rpx;
  height:200rpx;
  border-radius: 50%;
  margin-bottom: 20px;
} */
.profile_button{
  width:300rpx;
  height:80rpx;
  font-size: 40rpx;
  color:#184b21;
  text-align: center;
  line-height: 80rpx;
  background:#fff;
  border-radius: 80rpx;
  box-shadow: 0 6rpx 6rpx 6rpx rgba(0,0,0,0.05);
}
.profile_contain{
  width:100%;
  padding: 20rpx 20rpx 30rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.adv_pic{
  width:100%;
  height:228rpx;
  box-shadow: 0 4rpx 8rpx 8rpx rgba(0,0,0,0.1);
  margin-bottom: 30rpx;
}
.profile_ul_title{
  display: flex;
  justify-content: space-between;
}
.profile_title{
  font-weight: bold;
}
.profile_more{
  font-size: 28rpx;
  color: rgb(100,100,100);
  margin-right: 20rpx;
  display: flex;
  align-items: center;
}
.profile_movie,.profile_book,.profile_music{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width:100%;
  height:200rpx;
  font-size:26rpx;
}
.profile_icon{
  width:45rpx;
  height:45rpx;
  margin-left: 10rpx;
}
.profile_li{
  width:610rpx;
  height:100rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1.6rpx solid rgba(225,225,225,0.8);
  padding: 30rpx 20rpx;
}
.profile_music .profile_li{
  border-bottom: none;
}
.profile_num{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width:120rpx;
}
.big_num{
  color:rgb(100,100,100);
  font-size: 40rpx;
  font-weight: bold;
}
.has_look{
  /* font-size: 12px; */
  color:rgba(100,100,100,0.7);
  font-weight: bold;
}
.profile_mark{
  width:350rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.profile_mark_left{
  display: flex;
  flex-direction: column;
  justify-content: center;
  /* font-size: 12px; */
  color:rgba(180,180,180,0.9);
}
.profile_open{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.profile_open button{
  font-size: 24rpx;
  padding: 0;
  width:130rpx;
  height:50rpx;
  line-height: 50rpx;
  font-weight: bold;
  background:rgba(240,240,240,0.5);
  color: #444;
}
.profile_open button::after{
  border:none;
}